{
	"name": "@adam-coster/root",
	"version": "0.0.1",
	"private": true,
	"type": "module",
	"engines": {
		"node": ">=16",
		"pnpm": ">=7"
	},
	"scripts": {
		"setup:pnpm": "corepack enable && corepack prepare pnpm@7.12.2 --activate",
		"ci:site": "pnpm install:site && pnpm test:site",
		"install:site": "pnpm --filter site... --filter root install",
		"build:site": "turbo run --filter=site build",
		"test:site": "turbo run --filter=site build test",
		"build:all": "turbo run build",
		"build:force": "turbo run build --force",
		"watch": "turbo run watch --parallel",
		"fix:deps": "syncpack fix-mismatches",
		"clean": "pnpm clean:artifacts && pnpm clean:caches && pnpm clean:modules",
		"clean:modules": "rimraf node_modules projects/*/node_modules",
		"clean:artifacts": "rimraf projects/*/dist projects/*/build projects/*/*.tsbuildinfo projects/*/package-lock.json rimraf projects/*/.svelte-kit",
		"clean:caches": "rimraf projects/*/.turbo",
		"prepare": "husky install",
		"test": "turbo run test",
		"local:sync": "nodemon --ext toml,json,yaml,yml,mjs,js,cjs,nu --watch dotfiles --watch scripts scripts/sync-configs.mjs"
	},
	"nano-staged": {
		"*.{js,ts,json,yaml,yml,md,svelte}": [
			"pnpm prettier --config .prettierrc -w -u"
		],
		"*.{ts,svelte}": [
			"pnpm eslint --fix --cache --quiet --ext ts"
		]
	},
	"dependencies": {
		"@bscotch/trebuchet": "2.7.2",
		"@types/mocha": "10.0.0",
		"@types/node": "18.11.9",
		"@typescript-eslint/eslint-plugin": "5.43.0",
		"@typescript-eslint/parser": "5.43.0",
		"depcheck": "1.4.3",
		"eslint": "8.28.0",
		"eslint-config-prettier": "8.5.0",
		"eslint-plugin-cypress": "2.12.1",
		"eslint-plugin-html": "7.1.0",
		"eslint-plugin-prettier": "4.2.1",
		"eslint-plugin-svelte3": "4.0.0",
		"husky": "8.0.2",
		"nano-staged": "0.8.0",
		"prettier": "2.7.1",
		"prettier-plugin-svelte": "2.8.1",
		"rimraf": "3.0.2",
		"svelte": "3.53.1",
		"syncpack": "8.3.9",
		"turbo": "1.6.3",
		"typescript": "4.9.3"
	},
	"trebuchet": {
		"vscodeWorkspaceConfigPath": false
	},
	"pnpm": {
		"overrides": {
			"typescript": "4.9.3"
		}
	},
	"syncpack": {
		"workspace": false
	},
	"workspaces": [
		"projects/*"
	],
	"optionalDependencies": {
		"nodemon": "^2.0.20"
	},
	"packageManager": "pnpm@7.16.1"
}
