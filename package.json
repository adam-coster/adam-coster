{
  "name": "adam-coster",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=16",
    "pnpm": ">=7"
  },
  "scripts": {
    "build:site": "turbo run --filter=site build test",
    "build:dev": "turbo run build",
    "build:force": "turbo run build --force",
    "watch": "turbo run watch --parallel",
    "fix:dep-versions": "syncpack fix-mismatches",
    "clean": "clean:artifacts &&clean:caches && clean:modules",
    "clean:modules": "rm -rf node_modules projects/*/node_modules",
    "clean:artifacts": "rm -rf projects/*/dist projects/*/build projects/*/*.tsbuildinfo projects/*/package-lock.json rm -rf projects/*/.svelte-kit",
    "clean:caches": "rm -rf projects/*/.turbo",
    "postinstall": "patch-package",
    "prepare": "husky install",
    "test": "turbo run test"
  },
  "nano-staged": {
    "*.{js,ts,json,yaml,yml,md,svelte}": [
      "pnpm prettier --config .prettierrc -w -u"
    ],
    "*.{ts,svelte}": [
      "pnpm eslint --fix --cache --quiet --ext ts"
    ]
  },
  "dependencies": {
    "@bscotch/trebuchet": "^1.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "17.0.42",
    "@typescript-eslint/eslint-plugin": "^5.27.1",
    "@typescript-eslint/parser": "^5.27.1",
    "depcheck": "^1.4.3",
    "eslint": "^8.17.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-html": "^6.2.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-svelte3": "^4.0.0",
    "husky": "^8.0.1",
    "nano-staged": "^0.8.0",
    "patch-package": "^6.4.7",
    "prettier": "^2.6.2",
    "prettier-plugin-svelte": "^2.7.0",
    "svelte": "^3.49.0",
    "syncpack": "^8.2.4",
    "turbo": "^1.2.16",
    "typescript": "4.8.1-rc"
  },
  "trebuchet": {
    "vscodeWorkspaceConfigPath": false
  },
  "pnpm": {
    "overrides": {
      "typescript": "4.8.1-rc"
    }
  },
  "syncpack": {
    "workspace": false
  }
}
