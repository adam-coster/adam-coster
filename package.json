{
  "name": "adam-coster",
  "private": true,
  "type": "module",
  "workspaces": [
    "projects/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "clean": "rimraf projects/*/dist projects/*/build **/.turbo **/*.tsbuildinfo projects/**/package-lock.json projects/**/node_modules",
    "postinstall": "patch-package",
    "prepare": "husky install",
    "test": "turbo run test",
    "watch": "turbo run watch --parallel"
  },
  "lint-staged": {
    "*": [
      "npx prettier --config .prettierrc -w -u"
    ],
    "*.ts": [
      "npx eslint --fix --cache --quiet --ext ts"
    ]
  },
  "devDependencies": {
    "@aws-cdk/assert": "^1.127.0",
    "@aws-cdk/core": "^1.127.0",
    "@types/node": "16.11.7",
    "@typescript-eslint/eslint-plugin": "~5.10.0",
    "@typescript-eslint/parser": "~5.10.0",
    "ajv": "^8.10.0",
    "aws-cdk": "^2.14.0",
    "aws-cdk-lib": "^2.14.0",
    "change-case": "^4.1.2",
    "constructs": "^10.0.74",
    "eslint": "~8.7.0",
    "eslint-config-prettier": "8.1.0",
    "eslint-plugin-cdk": "^1.3.0",
    "husky": "^8.0.1",
    "lint-staged": "^12.4.1",
    "node-fetch": "^3.2.0",
    "prettier": "^2.5.1",
    "turbo": "^1.2.9",
    "typescript": "^4.7.1-rc",
    "patch-package": "^6.4.7"
  }
}
