{
  "name": "adam-coster",
  "private": true,
  "type": "module",
  "packageManager": "npm@8.10.0",
  "workspaces": [
    "projects/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "watch": "turbo run watch --parallel",
    "add": "npm i --no-fund --legacy-peer-deps --workspaces=false",
    "clean": "rimraf projects/*/dist projects/*/build **/.turbo **/*.tsbuildinfo projects/**/package-lock.json projects/**/node_modules",
    "fix": "treb fix --allProjects --packageJson",
    "postinstall": "patch-package",
    "prepare": "husky install",
    "test": "turbo run test"
  },
  "lint-staged": {
    "*": [
      "npx prettier --config .prettierrc -w -u"
    ],
    "*.ts": [
      "npx eslint --fix --cache --quiet --ext ts"
    ]
  },
  "dependencies": {
    "@adam-coster/site-tools": "file:projects/site-tools",
    "@bscotch/pathy": "^0.4.1",
    "@bscotch/trebuchet": "^1.1.2",
    "@bscotch/utility": "^5.2.0",
    "@sveltejs/adapter-vercel": "^1.0.0-next.56",
    "@sveltejs/kit": "^1.0.0-next.345",
    "@types/fs-extra": "^9.0.13",
    "@types/node": "17.0.35",
    "@types/remove-markdown": "^0.3.1",
    "@typescript-eslint/eslint-plugin": "^5.26.0",
    "@typescript-eslint/parser": "^5.26.0",
    "change-case": "^4.1.2",
    "drivelist": "^9.2.4",
    "eslint": "^8.16.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "feed": "^4.2.2",
    "fs-extra": "^10.1.0",
    "gray-matter": "^4.0.3",
    "hast": "^1.0.0",
    "highlight.js": "^11.5.1",
    "husky": "^8.0.1",
    "just-omit": "^2.0.1",
    "just-pick": "^4.0.1",
    "lint-staged": "^12.4.2",
    "lunr": "^2.3.9",
    "node-html-parser": "^5.3.3",
    "patch-package": "^6.4.7",
    "prettier": "^2.6.2",
    "rehype-accessible-emojis": "^0.3.2",
    "rehype-autolink-headings": "^6.1.1",
    "rehype-highlight": "^5.0.2",
    "rehype-slug": "^5.0.1",
    "rehype-stringify": "^9.0.3",
    "remark-gfm": "^3.0.1",
    "remark-parse": "^10.0.1",
    "remark-rehype": "^10.1.0",
    "remove-markdown": "^0.5.0",
    "sitemap": "^7.1.1",
    "svelte-preprocess": "^4.10.6",
    "ts-node": "^10.8.0",
    "tslib": "^2.4.0",
    "turbo": "^1.2.14",
    "typescript": "^4.8.0-dev.20220522",
    "unified": "^10.1.2"
  },
  "trebuchet": {
    "vscodeWorkspaceConfigPath": false
  },
  "devDependencies": {
    "@types/lunr": "^2.3.4"
  }
}
