{
  "name": "adam-coster",
  "private": true,
  "type": "module",
  "workspaces": [
    "projects/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "clean": "rimraf projects/*/dist projects/*/build **/.turbo **/*.tsbuildinfo projects/**/package-lock.json projects/**/node_modules",
    "postinstall": "patch-package",
    "prepare": "husky install",
    "test": "turbo run test",
    "watch": "turbo run watch --parallel",
    "add": "npm i --no-fund --workspaces=false",
    "fix": "turbo run fix --allProjects --packageJson"
  },
  "lint-staged": {
    "*": [
      "npx prettier --config .prettierrc -w -u"
    ],
    "*.ts": [
      "npx eslint --fix --cache --quiet --ext ts"
    ]
  },
  "devDependencies": {
    "@bscotch/trebuchet": "^1.1.0",
    "@types/node": "16.11.7",
    "@typescript-eslint/eslint-plugin": "~5.10.0",
    "@typescript-eslint/parser": "~5.10.0",
    "change-case": "^4.1.2",
    "eslint": "~8.7.0",
    "eslint-config-prettier": "8.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^8.0.1",
    "lint-staged": "^12.4.1",
    "patch-package": "^6.4.7",
    "prettier": "^2.5.1",
    "turbo": "^1.2.9",
    "typescript": "^4.7.1-rc"
  },
  "trebuchet": {
    "vscodeWorkspaceConfigPath": false
  }
}
