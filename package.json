{
	"name": "root",
	"private": true,
	"type": "module",
	"engines": {
		"node": ">=16",
		"pnpm": ">=7"
	},
	"scripts": {
		"setup:pnpm": "corepack enable && corepack prepare pnpm@7.9.3 --activate",
		"ci:site": "pnpm install:site && pnpm test:site",
		"install:site": "pnpm --filter site... --filter root install",
		"build:site": "turbo run --filter=site build",
		"test:site": "turbo run --filter=site build test",
		"build:all": "turbo run build",
		"build:force": "turbo run build --force",
		"watch": "turbo run watch --parallel",
		"fix:deps": "syncpack fix-mismatches",
		"clean": "pnpm clean:artifacts && pnpm clean:caches && pnpm clean:modules",
		"clean:modules": "rm -rf node_modules projects/*/node_modules",
		"clean:artifacts": "rm -rf projects/*/dist projects/*/build projects/*/*.tsbuildinfo projects/*/package-lock.json rm -rf projects/*/.svelte-kit",
		"clean:caches": "rm -rf projects/*/.turbo",
		"prepare": "husky install",
		"test": "turbo run test",
		"local:sync": "nodemon --ext toml,json,yaml,yml,mjs,js,cjs --watch dotfiles --watch scripts scripts/sync-configs.mjs"
	},
	"nano-staged": {
		"*.{js,ts,json,yaml,yml,md,svelte}": [
			"pnpm prettier --config .prettierrc -w -u"
		],
		"*.{ts,svelte}": [
			"pnpm eslint --fix --cache --quiet --ext ts"
		]
	},
	"dependencies": {
		"@bscotch/trebuchet": "^2.1.1",
		"@types/mocha": "^9.1.1",
		"@types/node": "18.7.14",
		"@typescript-eslint/eslint-plugin": "^5.36.1",
		"@typescript-eslint/parser": "^5.36.1",
		"depcheck": "^1.4.3",
		"eslint": "^8.23.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-html": "^7.1.0",
		"eslint-plugin-prettier": "^4.2.1",
		"eslint-plugin-svelte3": "^4.0.0",
		"husky": "^8.0.1",
		"nano-staged": "^0.8.0",
		"prettier": "^2.7.1",
		"prettier-plugin-svelte": "^2.7.0",
		"svelte": "^3.50.0",
		"syncpack": "^8.2.4",
		"turbo": "^1.4.5",
		"typescript": "4.8.2"
	},
	"trebuchet": {
		"vscodeWorkspaceConfigPath": false
	},
	"pnpm": {
		"overrides": {
			"typescript": "4.8.2"
		}
	},
	"syncpack": {
		"workspace": false
	},
	"workspaces": [
		"projects/*"
	],
	"optionalDependencies": {
		"nodemon": "^2.0.20"
	}
}
