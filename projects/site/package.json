{
  "name": "@adam-coster/site",
  "version": "0.13.1",
  "private": true,
  "type": "module",
  "scripts": {
    "bump": "cd .. && pnpm bump",
    "build": "svelte-kit sync && vite build && node scripts/postBuild.js",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "ci:publish": "node scripts/ci.publish.js",
    "preview": "vite preview --port 3037",
    "prepublish": "exit 1",
    "test": "concurrently --names serve,test --success command-test --kill-others \"pnpm:preview\" \"pnpm:test:when-ready\"",
    "test:dev": "TEST_PORT=3000 playwright test --trace on",
    "test:when-ready": "wait-on --timeout 30000 http://localhost:3037 && TEST_PORT=3037 playwright test",
    "version:tag": "git tag -a $npm_package_name@$npm_package_version -m \"Version $npm_package_version\" && git push --follow-tags",
    "watch": "svelte-kit sync && vite dev --port 3000"
  },
  "dependencies": {
    "@adam-coster/site-tools": "workspace:*",
    "@bscotch/pathy": "2.11.0",
    "@fortawesome/free-brands-svg-icons": "6.4.2",
    "@fortawesome/free-solid-svg-icons": "6.4.2",
    "just-debounce": "1.1.0",
    "svelte": "4.2.7",
    "svelte-fa": "3.0.4"
  },
  "devDependencies": {
    "@fortawesome/fontawesome-common-types": "6.4.2",
    "@playwright/test": "1.40.0",
    "@sveltejs/kit": "1.27.6",
    "@types/lunr": "2.3.7",
    "concurrently": "8.2.2",
    "gray-matter": "4.0.3",
    "lunr": "2.3.9",
    "prettier": "3.1.0",
    "schema-dts": "1.1.2",
    "svelte-check": "3.6.2",
    "typescript": "5.3.2",
    "vite": "5.0.2",
    "wait-on": "7.2.0",
    "wrangler": "3.17.1",
    "zx": "7.2.3"
  }
}
