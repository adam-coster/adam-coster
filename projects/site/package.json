{
	"name": "@adam-coster/site",
	"version": "0.3.0",
	"private": true,
	"type": "module",
	"scripts": {
		"build": "svelte-kit sync && vite build && node scripts/postBuild.js",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"preview": "vite preview --port 3037",
		"test": "concurrently --names serve,test --success command-test --kill-others \"pnpm:preview\" \"pnpm:test:when-ready\"",
		"test:when-ready": "wait-on --timeout 30000 http://localhost:3037 && cypress run --e2e --config baseUrl=http://localhost:3037",
		"watch": "svelte-kit sync && vite dev --port 3000"
	},
	"dependencies": {
		"@adam-coster/site-tools": "workspace:*",
		"@bscotch/pathy": "2.5.1",
		"@fortawesome/free-solid-svg-icons": "6.2.1",
		"just-debounce": "1.1.0",
		"svelte": "3.53.1",
		"svelte-fa": "3.0.3"
	},
	"devDependencies": {
		"@fortawesome/free-brands-svg-icons": "6.2.1",
		"@sveltejs/kit": "1.0.0-next.561",
		"@types/lunr": "2.3.4",
		"concurrently": "7.6.0",
		"cypress": "^11.2.0",
		"gray-matter": "4.0.3",
		"lunr": "2.3.9",
		"schema-dts": "1.1.0",
		"svelte-check": "2.9.2",
		"typescript": "4.9.3",
		"vite": "3.2.4",
		"wait-on": "6.0.1"
	},
	"packageManager": "pnpm@7.12.2",
	"engines": {
		"node": ">=16",
		"pnpm": ">=7"
	}
}
