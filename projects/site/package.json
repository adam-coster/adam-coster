{
	"name": "@adam-coster/site",
	"version": "0.0.1",
	"private": true,
	"type": "module",
	"scripts": {
		"build": "svelte-kit sync && vite build && node scripts/postBuild.js",
		"watch": "svelte-kit sync && vite dev --port 3000",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"preview": "vite preview --port 3037",
		"test:when-ready": "wait-on --timeout 30000 http://localhost:3037 && cypress run --e2e --config baseUrl=http://localhost:3037",
		"test": "concurrently --names serve,test --success command-test --kill-others \"pnpm:preview\" \"pnpm:test:when-ready\""
	},
	"dependencies": {
		"@adam-coster/site-tools": "workspace:*",
		"@bscotch/pathy": "^2.1.1",
		"@fortawesome/free-brands-svg-icons": "^6.2.0",
		"@fortawesome/free-regular-svg-icons": "^6.2.0",
		"@fortawesome/free-solid-svg-icons": "^6.2.0",
		"@sveltejs/kit": "1.0.0-next.469",
		"just-debounce": "^1.1.0",
		"lunr": "^2.3.9",
		"svelte": "^3.50.0",
		"svelte-fa": "^3.0.3"
	},
	"devDependencies": {
		"@types/lunr": "^2.3.4",
		"@types/puppeteer": "^5.4.6",
		"concurrently": "^7.3.0",
		"cypress": "^10.7.0",
		"puppeteer": "^17.1.0",
		"sass": "^1.54.8",
		"schema-dts": "^1.1.0",
		"svelte-check": "^2.9.0",
		"svelte-preprocess": "^4.10.7",
		"typescript": "4.8.2",
		"vite": "3.1.0-beta.2",
		"wait-on": "^6.0.1"
	}
}
