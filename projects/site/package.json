{
	"name": "@adam-coster/site",
	"version": "0.4.1",
	"private": true,
	"type": "module",
	"scripts": {
		"build": "svelte-kit sync && vite build && node scripts/postBuild.js",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"ci:publish": "node scripts/ci.publish.js",
		"preview": "vite preview --port 3037",
		"prepublish": "exit 1",
		"test": "concurrently --names serve,test --success command-test --kill-others \"pnpm:preview\" \"pnpm:test:when-ready\"",
		"test:dev": "TEST_PORT=3000 playwright test --trace on",
		"test:when-ready": "wait-on --timeout 30000 http://localhost:3037 && TEST_PORT=3037 playwright test",
		"version:tag": "git tag -a $npm_package_name@$npm_package_version -m \"Version $npm_package_version\" && git push --follow-tags",
		"watch": "svelte-kit sync && vite dev --port 3000"
	},
	"dependencies": {
		"@adam-coster/site-tools": "workspace:*",
		"@bscotch/pathy": "2.6.0",
		"@fortawesome/free-solid-svg-icons": "6.2.1",
		"just-debounce": "1.1.0",
		"svelte": "3.55.1",
		"svelte-fa": "3.0.3"
	},
	"devDependencies": {
		"@fortawesome/free-brands-svg-icons": "6.2.1",
		"@playwright/test": "1.30.0",
		"@sveltejs/kit": "1.3.2",
		"@types/lunr": "2.3.4",
		"concurrently": "7.6.0",
		"gray-matter": "4.0.3",
		"lunr": "2.3.9",
		"prettier": "2.8.3",
		"schema-dts": "1.1.0",
		"svelte-check": "3.0.3",
		"typescript": "4.9.4",
		"vite": "4.0.4",
		"wait-on": "7.0.1",
		"wrangler": "2.8.1",
		"zx": "7.1.1"
	},
	"packageManager": "pnpm@7.12.2",
	"engines": {
		"node": ">=16",
		"pnpm": ">=7"
	}
}
