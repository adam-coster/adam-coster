{
	"name": "@adam-coster/themer",
	"version": "0.3.0",
	"private": true,
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		},
		"./grammars/*": {
			"types": "./dist/theme-definitions/grammars/*.d.ts",
			"import": "./dist/theme-definitions/grammars/*.js"
		}
	},
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"scripts": {
		"build": "tsc --build",
		"typegen": "pnpm build && node ./dist/cli/generate-definitions.js",
		"watch": "tsc --build --watch"
	},
	"dependencies": {
		"@bscotch/pathy": "2.6.0",
		"@bscotch/utility": "6.8.0",
		"color": "4.2.3",
		"node-fetch": "3.3.0",
		"plist": "3.0.6",
		"semver": "7.3.8",
		"yargs": "17.6.2",
		"zod": "3.20.2"
	},
	"devDependencies": {
		"@types/color": "3.0.3",
		"@types/plist": "3.0.2",
		"@types/semver": "7.3.13",
		"@types/yargs": "17.0.20",
		"eslint": "8.32.0",
		"nodemon": "^2.0.20",
		"prettier": "2.8.3",
		"tslib": "2.4.1",
		"typescript": "4.9.4"
	}
}
